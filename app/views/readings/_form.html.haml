- form_for [@book, @reading] do |f|
  %p #{ f.label :rating, "Rating:"} #{ f.text_field :rating }
  %p #{ f.label :comments, "Comments:" }<br /> #{ f.text_area :comments }
  %p #{ f.label :date_started, "Date Started:" } #{ f.date_select :date_started, :start_year => 1990, :include_blank => true }
  %p #{ f.label :date_finished, "Date Finished:" } #{ f.date_select :date_finished, :start_year => 1990, :include_blank => true }
  %p #{ f.submit 'Create' }
