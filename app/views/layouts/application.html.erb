<!DOCTYPE html>
<html>
<head>
  <title>Bibliophile: <%= @page_title || "Untitled" %></title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="topbar">
    <div class="fill">
      <div class="container">
        <%= link_to "Bibliophile", books_path, :class=>"brand" %>
        <ul class="nav">
          <li><%= link_to "Home", books_path %></li>
          <li><%= link_to "About", "/pages/about" %></li>
          <li>
            <%= form_tag(books_path, method: "get", id: "search-form") do %>
              <%= text_field_tag :search, params[:search], placeholder: "Search by title" %>
              <button class="btn" type="submit"><i class="icon-search"></i></button>
            <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="content">
    <div class="container">
<%= yield %>
    </div>
  </div>

</body>
</html>
