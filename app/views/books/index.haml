%h1 Listing books
%table
	-@books.each do |book|
		%tr
			%td= book.title
			%td= link_to 'Show', book
			%td= link_to 'Edit', edit_book_path(book)
			%td= link_to 'Destroy', book, :confirm=> "Are you sure you want to delete this record?", :method => :delete
			
%a= link_to 'New book', new_book_path