%h1 Listing books
%table
	-@books.each do |book|
		%tr
			%td= link_to book.title, book
			%td= link_to 'Show', book
			%td= link_to 'Edit', edit_book_path(book)
			%td= link_to 'Destroy', book, :confirm=> "Are you sure you want to delete this book?", :method => :delete
			
#pages= will_paginate @books
%a= link_to 'New book', new_book_path