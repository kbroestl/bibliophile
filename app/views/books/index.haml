%h1 Listing books
%table.index
	-@books.each do |book|
		%tr
			%td.title= link_to book.title, book
			%td.show= link_to 'Show', book
			%td.edit= link_to 'Edit', edit_book_path(book)
			%td.delete= link_to 'Destroy', book, :confirm => "Are you sure you want to delete this book?", :method => :delete
			
#pages= will_paginate @books
%a= link_to 'New book', new_book_path