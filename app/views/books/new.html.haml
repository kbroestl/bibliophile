%h1 New Book
- form_for @book do |f|
  %p #{f.label :author_tokens, "Authors"} #{f.text_field :author_tokens}
  %p
    = f.label :title, "Title: "
    = f.text_field :title
  %p  
    = f.label :publisher, "Publisher: "
    = f.text_field :publisher
  %p
    = f.label :ISBN, "ISBN: "
    = f.text_field :ISBN
  %p
    = f.label :pages, "Pages: "
    = f.text_field :pages
  %p
    =f.label :language, "Language: "
    =f.select(:language_id, Language.all.collect {|l| [l.Language, l.id]})
  %p
    =f.label :genre, "Genre: "
    =f.select(:genre_id, Genre.all.collect{|g| [g.genre.downcase.gsub(/\b\w/){$&.upcase}, g.id]}, {:order => :genre})
  %p
    =f.label :location, "Current Location: "
    =f.select(:location_id, Location.all.collect{|loc| [loc.Location, loc.id]})
  %p
    =f.label :notes
    =f.text_area :notes
  %p
    =f.submit

%p= link_to 'Back', books_path